
import React, { useEffect, useState } from 'react'
import axios from 'axios'

type Noticia = { titulo: string, link: string }

export default function App() {
  const [noticias, setNoticias] = useState<Noticia[]>([])
  const [busca, setBusca] = useState('')
  const [resultados, setResultados] = useState<any[]>([])

  useEffect(() => {
    axios.get('http://localhost:4000/api/noticias').then(res => setNoticias(res.data))
  }, [])

  const pesquisar = async () => {
    const res = await axios.get(`http://localhost:4000/api/pesquisa?q=${busca}`)
    setResultados(res.data)
  }

  return (
    <div className="p-6 bg-gray-100 min-h-screen">
      <h1 className="text-3xl font-bold text-center mb-6">ðŸ“° MÃ´naco Univers News</h1>
      <div className="flex gap-2 justify-center mb-6">
        <input value={busca} onChange={e => setBusca(e.target.value)} className="border p-2 rounded w-1/2" placeholder="Pesquisar..." />
        <button onClick={pesquisar} className="bg-blue-600 text-white px-4 py-2 rounded">Buscar</button>
      </div>
      <h2 className="text-xl font-semibold mb-4">Ãšltimas NotÃ­cias</h2>
      <ul className="space-y-2">
        {noticias.map((n, i) => (
          <li key={i} className="p-4 bg-white rounded shadow">
            <a href={n.link} target="_blank" className="text-blue-600">{n.titulo}</a>
          </li>
        ))}
      </ul>
      {resultados.length > 0 && (
        <div className="mt-10">
          <h2 className="text-xl font-semibold mb-4">Resultados da Pesquisa</h2>
          <ul className="space-y-2">
            {resultados.map((r, i) => (
              <li key={i} className="p-4 bg-white rounded shadow">
                <a href={r.link} target="_blank" className="text-blue-600">{r.titulo}</a>
                <p className="text-sm text-gray-600">{r.descricao}</p>
                <p className="text-xs text-gray-500">{r.categoria} â€¢ {r.tempo}</p>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  )
}
